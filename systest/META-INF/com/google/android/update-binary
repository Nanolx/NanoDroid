#!/sbin/sh

umask 022
OUTFD=${2}
ZIP=${3}

mkdir -p /dev/tmp
unzip -oq "${ZIP}" -d "/dev/tmp"
if [ ! -f /dev/tmp/SysTest ]; then
	echo " !! failed to load SysTest"
	exit 1
else
	source "/dev/tmp/SysTest"
fi

detect_bootmode
detect_outfd

show_banner

ui_print " || performing tests"

ui_print " "
ui_print " || storing results in $(dirname ${LOGFILE}):"
ui_print " ||   as $(basename ${LOGFILE})"
ui_print " "

mount_partitions
system_test
store_results

if ! ${BOOTMODE} ; then
	umount /system_root 2>/dev/null
	umount /system 2>/dev/null
	umount /vendor 2>/dev/null
	umount /dev/random 2>/dev/null
	umount /apex/com.android.runtime 2>/dev/null
	losetup -d ${APEX_LOOP} 2>/dev/null
fi

ui_print " > Done!"
ui_print " "

exit 0
