	grab_apk_from_repo ${fd_NLPRADIOCELL[@]}
}

update_microg () {
	update_act[0]='1'
	update_act[8]='1'
	update_act[9]='1'
	update_act[10]='1'
}

grab_gsync () {
	#          KK LL M  N  O  P  Q
	for API in 19 21 23 24 26 28 29; do
		grab_apk_from_ogapps ${og_CALSYNC[@]} ${API}
		grab_apk_from_ogapps ${og_CONSYNC[@]} ${API}
		grab_apk_from_ogapps ${og_BTRANSP[@]} ${API}
	done
}

update_gsync () {
